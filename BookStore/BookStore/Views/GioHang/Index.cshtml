@model IEnumerable<BookStore.Entities.BSDONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h4 class="title">Danh sách đơn hàng</h4>

<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BSUSER.HOTEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TONGTIEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGDAT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGGIAO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DATHANHTOAN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TINHTRANGGH)
        </th>
        <th style="width: 100px">Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BSUSER.HOTEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TONGTIEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGDAT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGGIAO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DATHANHTOAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TINHTRANGGH)
            </td>
            <td>

                <a href="Edit?id=@item.MADH">
                    <img src="~/HinhAnh/edit.png" />
                </a>
                <a href="Details?id=@item.MADH">
                    <img src="~/HinhAnh/detail.png" />
                </a>
                <a href="Delete?id=@item.MADH">
                    <img src="~/HinhAnh/delete.png" />
                </a>
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>