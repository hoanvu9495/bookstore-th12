@{
    ViewBag.title = "Đăng nhập";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
@model BookStore.Models.LoginModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, null, new { @class="alert alert-danger alert-md"});
    <div class="form-group">
        <label class="control-label col-sm-4" for="taiKhoan">Tài khoản:</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" for="matKhau">Mật khẩu:</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @placehoder = "Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-6">
            <div class="checkbox">
                @Html.CheckBoxFor(model => model.RememberMe) Ghi nhớ
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-6">
            <button type="submit" class="btn btn-default">Đăng nhập</button>
        </div>
    </div>

    @*<div class="block">
        <span>Đăng nhập bằng <img src="~/icon/facebook.png" height="16px" width="10px" alt="facebook" /></span>

    </div>*@

}


