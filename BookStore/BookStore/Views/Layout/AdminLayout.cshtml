@using BookStore.Code
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <title>@ViewBag.Title</title>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <script src="~/Content/js/jquery.js"></script>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <link href="~/Content/css/NguoiDungCssLayout/mystyle.css" rel="stylesheet" />
    <link href="~/Content/css/AdminCssLayout/CSS/AdminLayout.css" rel="stylesheet" />
    <link href="~/Content/css/AdminCssLayout/CSS/Font-Awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- END PAGE LEVEL  STYLES -->
    @* TINY MCE  *@
    @*<script src="~/tinymce/tinymce.min.js"></script>
        <script>tinymce.init({ selector: 'textarea' });</script>*@
</head>
<body>
    <!-- MAIN WRAPPER -->
    @*<div id="wrap">*@


    <!-- HEADER SECTION -->
    <div id="top">


        <nav class="navbar navbar-inverse title">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="~/Home/Index">
                        <img id="logo" src="~/Content/css/NguoiDungCssLayout/logoWhite.png" />
                    </a>
                </div>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Home/Index"><i class="icon-home"></i> <strong>Home</strong></a></li>
                    
                    <li>
                        <a href="~/Home/Logout">
                            <i class="icon-signout"></i> <strong>Logout</strong>
                        </a>
                    </li>
                    
                </ul>
            </div>
        </nav>
    </div>
    <!-- END HEADER SECTION -->

    <div id="mainWeb">
        <!-- MENU SECTION -->
        <div id="left">
            @* Phần hiển thị avatar admin *@

            <div class="thongTinAdmin">
                <div class="avatar">

                    <img class="media-object img-thumbnail user-img" alt="User Picture" width="100" src="~/Avatar/@SessionHelper.GetSession().avatar" />

                </div>

                <div class="media-body">

                    @{
                        if (@SessionHelper.GetSession() != null)
                        {
                            <h5 class="media-heading"> @SessionHelper.GetSession().userName</h5>
                        }
                    }


                    <a class="btn btn-success btn-xs btn-circle" style="width: 10px;height: 12px;"></a> Online
                </div>


            </div>

            <div class="listMenu">
                <div class="list-group">
                    <a class="list-group-item active" href="~/Admin/Index">
                        <i class="icon-table"></i> Bảng điều khiển
                    </a>
                    <a class="list-group-item" href="~/User/Index"><i class="icon-angle-right"></i> Danh sách thành viên </a>

                    <a class="list-group-item" href="~/DauSach/Index"><i class="icon-angle-right"></i> Sách </a>
                    <a class="list-group-item" href="~/LoaiSach/Index"><i class="icon-angle-right"></i> Loại sách </a>

                    <a class="list-group-item" href="~/NXB/Index"><i class="icon-film"></i>  Nhà xuất bản </a>
                    <a class="list-group-item" href="~/TacGia/Index"><i class="icon-map-marker"></i> Tác giả </a>
                    <a class="list-group-item" href="~/GioHang/Index"><i class="icon-columns"></i> Giỏ hàng </a>
                    <a class="list-group-item" href="~/KhuyenMai/Index"><i class="icon-columns"></i> Khuyến mại </a>

                </div>

            </div>

        </div>
        <!--END MENU SECTION -->
        <!--PAGE CONTENT -->
        <div id="content">
            <div class="inner" style="min-height: 700px;">
                @RenderBody()
            </div>

        </div>
        <!--END PAGE CONTENT -->

    </div>

    <!--END MAIN WRAPPER -->
    <!-- FOOTER -->
    <div id="footer">
        <p>&copy;  BookStore &nbsp;2016 &nbsp;</p>
    </div>
    <!--END FOOTER -->
    <!-- GLOBAL SCRIPTS -->
    <script src="~/Content/css/AdminCssLayout/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Content/css/AdminCssLayout/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/css/AdminCssLayout/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>
    <!-- END GLOBAL SCRIPTS -->
    <!-- PAGE LEVEL SCRIPTS -->
    <script src="~/Content/css/AdminCssLayout/plugins/flot/jquery.flot.js"></script>
    <script src="~/Content/css/AdminCssLayout/plugins/flot/jquery.flot.resize.js"></script>
    <script src="~/Content/css/AdminCssLayout/plugins/flot/jquery.flot.time.js"></script>
    <script src="~/Content/css/AdminCssLayout/plugins/flot/jquery.flot.stack.js"></script>
    <script src="~/Content/css/AdminCssLayout/js/for_index.js"></script>

    <!-- END PAGE LEVEL SCRIPTS -->

</body>
</html>
