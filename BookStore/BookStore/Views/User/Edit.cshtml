@model BookStore.Entities.BSUSER

@{
    ViewBag.Title = "Sửa thông tin thành viên";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Thay đổi thông tin thành viên</h2>

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MAUSR)
        <input type="text" name="avatarOld" value="@Model.avatar" class="hide"/>

        <div class="form-group">
            @Html.LabelFor(model => model.HOTEN, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @*@Html.EditorFor(model => model.HOTEN)*@
                <input class="form-control" type="text" name="HOTEN" value="@Model.HOTEN" />
                @Html.ValidationMessageFor(model => model.HOTEN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGSINH, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <input type="text" name="NGSINH" class="form-control" value="@Model.NGSINH" />
                @Html.ValidationMessageFor(model => model.NGSINH)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GT, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <select name="GT" class="form-control">
                    @{
                        if (@Model.GT == "Nam")
                        {
                            <option value="Nam" selected>Nam</option>
                            <option value="Nữ">Nữ</option>
                        }
                        else
                        {
                             <option value="Nam" >Nam</option>
                            <option value="Nữ" selected>Nữ</option>
                        }
                    }
                </select>
                @Html.ValidationMessageFor(model => model.GT)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EMAIL, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <input type="email" name="EMAIL" class="form-control" value="@Model.EMAIL"/>
                @Html.ValidationMessageFor(model => model.EMAIL)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SDT, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @*@Html.EditorFor(model => model.SDT, new { @class="form-control"})*@
                <input type="text" class="form-control" name="SDT" value="@Model.SDT"/>
                @Html.ValidationMessageFor(model => model.SDT)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DIACHI, new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <input type="text" class="form-control"  name="DIACHI" value="@Model.DIACHI"></input>
                @Html.ValidationMessageFor(model => model.DIACHI)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TAIKHOAN, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @*@Html.EditorFor(model => model.TAIKHOAN)*@
                <input type="text" class="form-control" name="TAIKHOAN" value="@Model.TAIKHOAN"/>
                @Html.ValidationMessageFor(model => model.TAIKHOAN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MATKHAU, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <input type="password" class="form-control" name="MATKHAU" value="@Model.MATKHAU"/>
                @Html.ValidationMessageFor(model => model.MATKHAU)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ảnh đại diện", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <input type="file" class="form-control"  accept="image/x-png, image/gif, image/jpeg" name="FileUpload">
                @ViewBag.ThongBao
            </div>
            <div class="col-md-3" >
                <img src="~/Avatar/@Model.avatar" width="50"/>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Cấp độ", new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <input type="text" name="USRANK" value="@Model.USRANK" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Xóa tài khoản này", new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                <input type="checkbox" name="ISDELETE"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index", "User", new { @class="btn btn-md btn-primary" })
</div>
