@model IEnumerable<BookStore.Entities.BSUSER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}


<h4 class="title">Danh sách thành viên</h4>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Họ Tên")
        </th>
        <th>
            @Html.DisplayName("Ngày Sinh")
        </th>
        <th>
            @Html.DisplayName("Giới Tính")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th>
            @Html.DisplayName("Sđt")
        </th>
        <th>
            @Html.DisplayName("Địa Chỉ")
        </th>
        <th>
            @Html.DisplayName("Tài Khoản")
        </th>
        <th>
            @Html.DisplayName("Mật Khẩu")
        </th>
        <th>
            @Html.DisplayName("Rank")
        </th>
        <th style="width:100px">
            @Html.DisplayName("Chức năng")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HOTEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGSINH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIACHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAIKHOAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MATKHAU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.USRANK)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.MAUSR }) |
            @Html.ActionLink("Details", "Details", new { id=item.MAUSR }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MAUSR })*@

            <a href="Edit?id=@item.MAUSR">
                <img src="~/HinhAnh/edit.png" />
            </a>
            <a href="Details?id=@item.MAUSR">
                <img src="~/HinhAnh/detail.png" />
            </a>
            <a href="Delete?id=@item.MAUSR">
                <img src="~/HinhAnh/delete.png" />
            </a>
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>